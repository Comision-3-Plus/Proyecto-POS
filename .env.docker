# ==========================================
# NEXUS POS - CONFIGURACIÓN DOCKER
# ==========================================
# Este archivo contiene variables de entorno para Docker Compose
# Copiar a .env antes de ejecutar docker-compose up

# ==========================================
# BASE DE DATOS (PostgreSQL)
# ==========================================
POSTGRES_USER=nexuspos
POSTGRES_PASSWORD=nexuspos_secret_2025
POSTGRES_DB=nexus_pos
POSTGRES_PORT=5432

# URL completa para FastAPI (asyncpg)
DATABASE_URL=postgresql+asyncpg://nexuspos:nexuspos_secret_2025@db:5432/nexus_pos

# URL para migraciones Alembic (psycopg2)
DATABASE_MIGRATION_URL=postgresql://nexuspos:nexuspos_secret_2025@db:5432/nexus_pos

# ==========================================
# RABBITMQ (Cola de Mensajes)
# ==========================================
RABBITMQ_USER=nexususer
RABBITMQ_PASS=nexuspass2025
RABBITMQ_URL=amqp://nexususer:nexuspass2025@rabbitmq:5672/

# ==========================================
# REDIS (Cache)
# ==========================================
REDIS_URL=redis://redis:6379/0

# ==========================================
# SEGURIDAD (JWT)
# ==========================================
# ⚠️ CAMBIAR EN PRODUCCIÓN ⚠️
SECRET_KEY=super-secret-key-change-in-production-please-123456789
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ==========================================
# CORS (Frontend)
# ==========================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://frontend:3000

# ==========================================
# MERCADO PAGO (Pagos)
# ==========================================
# Obtener en: https://www.mercadopago.com.ar/developers
MERCADOPAGO_ACCESS_TOKEN=TEST-your-access-token-here
MERCADOPAGO_WEBHOOK_SECRET=your-webhook-secret-here

# ==========================================
# AFIP (Facturación Electrónica Argentina)
# ==========================================
AFIP_PRODUCTION=false
AFIP_CUIT=20123456789
# AFIP_CERT y AFIP_KEY se configuran cuando se implemente

# ==========================================
# SHOPIFY (E-commerce Integration)
# ==========================================
# Obtener en: https://partners.shopify.com
SHOPIFY_CLIENT_ID=your-shopify-client-id
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret
SHOPIFY_REDIRECT_URI=http://localhost:8001/api/v1/integrations/shopify/callback

# ==========================================
# URLs DE LA APLICACIÓN
# ==========================================
BASE_URL=http://localhost:8001
FRONTEND_URL=http://localhost:5173

# ==========================================
# LEGACY DATABASE (SQL Server - Opcional)
# ==========================================
# Solo necesario si se migra desde Lince/Zoo Logic
LEGACY_DB_HOST=legacy_db
LEGACY_DB_PORT=1433
LEGACY_DB_USER=sa
LEGACY_DB_PASSWORD=Password123!
LEGACY_DB_NAME=LinceDB

# ==========================================
# SENDGRID (Email - Opcional)
# ==========================================
# Obtener en: https://sendgrid.com
# SENDGRID_API_KEY=SG.your-api-key-here

# ==========================================
# CONFIGURACIÓN DE AMBIENTE
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
