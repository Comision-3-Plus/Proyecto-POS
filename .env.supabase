# ==========================================
# NEXUS POS - CONFIGURACIÓN SUPABASE
# ==========================================

# ==========================================
# SUPABASE DATABASE
# ==========================================
# Obtener de: https://app.supabase.com/project/_/settings/database
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# IMPORTANTE: Reemplazar con tus credenciales de Supabase
DATABASE_URL=postgresql+asyncpg://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres
DATABASE_MIGRATION_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Direct connection (para migraciones)
SUPABASE_DB_HOST=db.YOUR_PROJECT_REF.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=YOUR_PASSWORD
SUPABASE_DB_NAME=postgres

# ==========================================
# SUPABASE API (Opcional - para usar funciones serverless)
# ==========================================
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# ==========================================
# REDIS (Upstash o Railway)
# ==========================================
# Opción 1: Upstash Redis (https://upstash.com)
REDIS_URL=rediss://:YOUR_UPSTASH_PASSWORD@YOUR_REGION.upstash.io:6379

# Opción 2: Redis local (si usas Docker)
# REDIS_URL=redis://localhost:6379/0

# ==========================================
# RABBITMQ (CloudAMQP)
# ==========================================
# Obtener de: https://www.cloudamqp.com
RABBITMQ_URL=amqps://YOUR_USERNAME:YOUR_PASSWORD@YOUR_INSTANCE.cloudamqp.com/YOUR_VHOST

# Opción local (si usas Docker)
# RABBITMQ_URL=amqp://nexususer:nexuspass2025@localhost:5672/

# ==========================================
# SEGURIDAD (JWT)
# ==========================================
SECRET_KEY=super-secret-key-change-in-production-please-123456789
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ==========================================
# CORS (Frontend)
# ==========================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend.vercel.app

# ==========================================
# MERCADO PAGO (Pagos)
# ==========================================
MERCADOPAGO_ACCESS_TOKEN=TEST-your-access-token-here
MERCADOPAGO_WEBHOOK_SECRET=your-webhook-secret-here

# ==========================================
# AFIP (Facturación Electrónica Argentina)
# ==========================================
AFIP_PRODUCTION=false
AFIP_CUIT=20123456789

# ==========================================
# SHOPIFY (E-commerce Integration)
# ==========================================
SHOPIFY_CLIENT_ID=your-shopify-client-id
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret
SHOPIFY_REDIRECT_URI=https://your-api.railway.app/api/v1/integrations/shopify/callback

# ==========================================
# URLs DE LA APLICACIÓN
# ==========================================
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ==========================================
# CONFIGURACIÓN DE AMBIENTE
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
